@{
    List<Pessoa> listapessoa = ViewBag.SelectCliente;
}
<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/1ab94d0eba.js" crossorigin="anonymous"></script>
    <title>Login Form</title>
    <link href="~/css/PreviewV.css" rel="stylesheet" type="text/css" />

    <title>Alert em Javascript</title>

    <script>
        function funcao() {

            alert("Finalizado");
        }
    </script>
</head>
<body>
    <main class="container">

        <div class="text-center">
            <h2>Pré-Visualização do seu V-Card.</h2>
        </div>
        <form action="" method="get" class="formulario-form">
            @{
                foreach (var item in listapessoa)
                {
                    <label class="label">Nome:</label>
                    <label class="dados">@item.Nome</label><br />
                    <label class="label"> Telefone/Whatsapp: </label>
                    <label class="dados">@item.Fone</label> <br />
                    <label class="label"> Email: </label>
                    <label class="dados"> @item.Email</label> <br />
                    <label class="label"> Serviços:</label>
                    <label class="dados"> @item.RamoAtividade1</label>
                }

            }
            <input type="submit" value="Finalizar" onclick="funcao()" formaction="/Home/Visit" />


        </form>
    </main>
</body>
</html>